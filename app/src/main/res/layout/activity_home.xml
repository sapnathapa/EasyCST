<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context=".Home">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/comm"
                android:layout_width="@dimen/logoImageSize"
                android:layout_height="@dimen/logoImageSize"
                android:padding="10dp"
                app:srcCompat="@drawable/cstlogo" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"
                android:textAppearance="@android:style/TextAppearance.Material.Display1" />
        </TableRow>

        <!--- Home Icons Layout -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/maintain"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/maintanance" />

            <ImageView
                android:id="@+id/timetable"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/time_table" />

            <ImageView
                android:id="@+id/attendance"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/attendance" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/maintenance"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/timetable"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/attendance"
                android:textColor="@android:color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp">


            <ImageView
                android:id="@+id/football"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/assignment" />

            <ImageView
                android:id="@+id/feedback"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/feedback" />

            <ImageView
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/about" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/football"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/feedback"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/about"
                android:textColor="@android:color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/share" />

            <ImageView
                android:id="@+id/rate"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/rate" />

            <ImageView
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_height="@dimen/gridImageSize"
                android:layout_weight="1"
                app:srcCompat="@drawable/help" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/rate"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="@string/help"
                android:textColor="@android:color/black" />
        </TableRow>
    </TableLayout>
</ScrollView>