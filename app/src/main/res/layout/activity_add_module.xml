<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".AddModule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mcodeWrapper"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/mcode"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints="HA-3-01"
                android:hint="Module Code"
                android:inputType="textCapCharacters" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/mnameWrapper"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/mname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints=""
                android:hint="Module Name"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/mtutorWrapper"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/mtutor"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints=""
                android:hint="Module Tutor"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="@string/save" />
    </LinearLayout>
</ScrollView>